<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity2">

    <TextView
            android:text="MAWQIFE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/AppName2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="104dp"/>
    <TextView
            android:text="User sign up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/UserSignUp"
            app:layout_constraintStart_toStartOf="@+id/ID_2"
            app:layout_constraintEnd_toEndOf="@+id/ID_2" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintTop_toBottomOf="@+id/AppName2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/ID_2"
            android:hint="Enter your ID"
            app:layout_constraintTop_toBottomOf="@+id/UserSignUp" android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/UserPassword"
            android:hint="Enter Password" app:layout_constraintStart_toStartOf="@+id/ID_2"
            app:layout_constraintEnd_toEndOf="@+id/ID_2"
            app:layout_constraintTop_toBottomOf="@+id/ID_2" android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/UserEmail"
            android:hint="Enter E-mail " app:layout_constraintEnd_toEndOf="@+id/UserPassword"
            app:layout_constraintStart_toStartOf="@+id/UserPassword"
            app:layout_constraintTop_toBottomOf="@+id/UserPassword" android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/CarPlate"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/UserEmail" app:layout_constraintEnd_toEndOf="@+id/UserEmail"
            app:layout_constraintStart_toStartOf="@+id/UserEmail" app:layout_constraintHorizontal_bias="0.0"
            android:hint="Car plate (Number first)"/>
    <Button
            android:text="Sign Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/SignUpButton2"
            app:layout_constraintEnd_toEndOf="@+id/CarPlate" app:layout_constraintStart_toStartOf="@+id/CarPlate"
            app:layout_constraintTop_toBottomOf="@+id/CarPlate" android:layout_marginTop="80dp"
            app:layout_constraintHorizontal_bias="0.496"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/FromSignUpToLogin"
            app:layout_constraintStart_toStartOf="@+id/SignUpButton2"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/SignUpButton2"/>
</androidx.constraintlayout.widget.ConstraintLayout>