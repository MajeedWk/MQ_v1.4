<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity8">

    <TextView
            android:text="Report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Report"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"/>
    <EditText
            android:layout_width="329dp"
            android:layout_height="53dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/CarPlateReport"
            android:hint="Enter Car Plate and violation" app:layout_constraintEnd_toEndOf="@+id/Report"
            app:layout_constraintStart_toStartOf="@+id/Report" app:layout_constraintTop_toBottomOf="@+id/Report"
            android:layout_marginTop="100dp"/>
    <Button
            android:text="Report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ReportButton2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Main Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ReportToMenuButton"
            app:layout_constraintEnd_toEndOf="@+id/ReportButton2"
            app:layout_constraintStart_toStartOf="@+id/ReportButton2"
            app:layout_constraintTop_toBottomOf="@+id/ReportButton2" android:layout_marginTop="40dp"
            app:layout_constraintHorizontal_bias="0.533"/>
</androidx.constraintlayout.widget.ConstraintLayout>