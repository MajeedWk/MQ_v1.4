<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity5">
    <TextView
            android:text="Choose Parking"
            android:layout_width="112dp"
            android:layout_height="26dp" android:id="@+id/ChooseParking"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="68dp"/>
    <Button
            android:text="Confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ConfirmBooking"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/ParkingSpace"
            android:layout_marginBottom="99dp"/>
    <RadioGroup
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/ParkingSpace" android:layout_marginTop="106dp"
            android:layout_marginBottom="12dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/ConfirmBooking" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <RadioButton
                android:text="A1"
                android:layout_width="100dp"
                android:layout_height="100dp" android:id="@+id/A1Parking"/>
        <RadioButton
                android:text="A2"
                android:layout_width="100dp"
                android:layout_height="100dp" android:id="@+id/A2Parking"/>
        <RadioButton
                android:text="A3"
                android:layout_height="100dp" android:id="@+id/A3Parking" android:layout_width="100dp"/>
        <RadioButton
                android:text="A4"
                android:layout_width="100dp"
                android:layout_height="100dp" android:id="@+id/A4Parking"/>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>